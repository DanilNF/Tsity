.nav
    display flex
    justify-content center
    font-size 14px
    align-items center
    text-transform uppercase

.nav__link
    margin-left 40px
    padding-bottom 20px
    text-align center
    color black
    margin 15px
    margin-top 20px
    margin-bottom 0px
    text-decoration none
    transition color .2s linear
    font-weight 700
    font-size 15px
    display inline-block
    position relative
    &:hover
        color #ffff
        &:before
            width 100%
            left 0
        &:after
            width 100%
    &:after
        display block
        position absolute
        content ""
        height 4px
        width 0
        background-color #ffff
        left 0%
        bottom 0

